<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<div>
    <%= link_to "Edit article", edit_article_path(@article) %>
</div>
<div>
    <%= link_to "Delete article", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
</div>
<div>
    <%= link_to "Back to articles", articles_path %>
</div>